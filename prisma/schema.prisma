generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model category {
  id String @id @defoul(uuid())
  name String
  slug String
  imageUrl String
  product Product[]
}

model product {
  id String @id @defoul(uuid())
  name String
  slug String
  decription String
  basePrice Decimal @db.Decimal(8,2)
  imageUrl String
  category Category @relation(fields: [categoryId], references: [id])
  discountPercentage Int @defoul(0)
}